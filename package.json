{
  "name": "nodejs-typescript-jest-eslint-seed-project",
  "version": "1.0.0",
  "description": "NodeJS Typescript, Jest and ESLint seed project.",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js",
    "dev": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.test.ts' --exec node -r ts-node/register src/index.ts",
    "dev:inspect": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.test.ts' --exec node --inspect-brk -r ts-node/register src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint ./src/**/*.ts"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.9",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^26.3.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "ts-jest": "^26.2.0",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  }
}
